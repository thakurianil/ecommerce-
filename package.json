{
  "name": "ecommerce-site",
  "version": "1.0.0",
  "description": "Full-stack e-commerce website",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd src/server && npm start",
    "client": "cd src/client && npm start",
    "dev": "concurrently \"cd src/server && npm run dev\" \"cd src/client && npm start\"",
    "install-all": "npm install && cd src/client && npm install && cd ../server && npm install",
    "test": "jest"
  },
  "keywords": [
    "ecommerce",
    "react",
    "node",
    "express"
  ],
